<h2> All Conversations </h2>

<div class="search">
<h4>Search by Conversation Title:</h4>
  <%# form_tag("/conversations/search", :method => :get) do %>
  <%# text_field_tag(:search, params[:search]) %>
  <%= form_tag conversations_path, method: :get do %>

  <%= text_field_tag(:query, params[:query]) %>

  <%= submit_tag "Search", title: nil %>
<% end %>
</div>

<% @conversations.each do |conversation| %>
<ul id="conversations">
  <!--using rails url helpers-->
  <li> <%= link_to conversation.title, conversation_path(conversation) %></li>
</ul>
<% end %>

<div class="button button2">
<%= link_to "Create New Conversation", "/conversations/new" %>
</div>
